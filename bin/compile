#!/usr/bin/env bash

set -e            # fail fast
set -o pipefail   # don't ignore exit codes when piping output
# set -x          # enable debugging

status() {
  echo "-----> $*"
}

indent() {
  sed -u 's/^/       /'
}

# Directories
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
PATH=${PATH}:${BUILD_DIR}/vendor/node/bin:${BUILD_DIR}/node_modules/.bin

# Run subsequent commands from the build path
cd ${BUILD_DIR}
